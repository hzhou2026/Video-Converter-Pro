# ============================================
# Configuración del Backend
# ============================================
NODE_ENV=production
PORT=3000

# Redis
REDIS_URL=redis://redis:6379

# Límites
MAX_FILE_SIZE=2302541252
MAX_CONCURRENT_JOBS=5

# Frontend URL (para CORS)
FRONTEND_URL=http://localhost

# ============================================
# Configuración de FFmpeg
# ============================================
UPLOADS_DIR=uploads
OUTPUTS_DIR=outputs
TEMP_DIR=temp
CACHE_DIR=cache

# Limpieza
CLEANUP_INTERVAL=120000          # 2 minutos
FILE_RETENTION=10800000         # 3 horas

# ============================================
# Seguridad
# ============================================
JWT_SECRET=change-this-in-production
STORAGE_TYPE=local

# ============================================
# Logging
# ============================================
LOG_LEVEL=info
